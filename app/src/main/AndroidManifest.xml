<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.opeimpacta.ommani">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    
    <application
        android:name=".OmmaniAplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MapasActivity"></activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/API_KEY" />

        <service android:name=".MyFiribaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NovoProduto" />
        <activity android:name=".TelaCadastroActivity" />
        <activity android:name=".ProdutoActivity" />
        <activity
            android:name=".TelaFaqActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".TelaPerfilActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".TelaSobreActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".TelaConfiguracoesActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity android:name=".TelaMassagemActivity" />
        <activity android:name=".TelaYogaActivity" />
        <activity android:name=".TelaCristaisActivity" />
        <activity android:name=".DebugActivity" />
        <activity
            android:name=".TelaInicialActivity"
            android:theme="@style/AppTheme.Toolbar" />
    </application>

</manifest>