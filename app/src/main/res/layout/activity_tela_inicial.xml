<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".TelaInicialActivity">

    <include layout="@layout/toolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:gravity="center_horizontal"
                android:textColor="#ff266a"
                android:layout_marginTop="15dp"
                android:text="CRISTAIS" />
            <ImageView
                android:id="@+id/imgCristal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:id="@+id/botao_cristais"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:stateListAnimator="@null"
                android:layout_marginBottom="10dp"
                android:text="ver"
                android:textColor="#000"
                android:background="@android:color/white"/>


            <TextView
                android:id="@+id/yoga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:gravity="center_horizontal"
                android:textColor="#ff266a"
                android:layout_marginTop="15dp"
                android:text="YOGA" />
            <ImageView
                android:id="@+id/imgYoga"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:id="@+id/botao_yoga"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:stateListAnimator="@null"
                android:textColor="#000"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:text="ver"
                android:background="@android:color/white"/>


            <TextView
                android:id="@+id/massagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:gravity="center_horizontal"
                android:textColor="#ff266a"
                android:layout_marginTop="15dp"
                android:text="MASSAGEM" />
            <ImageView
                android:id="@+id/imgMassagem"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:id="@+id/botao_massagem"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:stateListAnimator="@null"
                android:textColor="#000"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:text="ver"
                android:background="@android:color/white"/>
        </LinearLayout>

    </ScrollView>


  </LinearLayout>